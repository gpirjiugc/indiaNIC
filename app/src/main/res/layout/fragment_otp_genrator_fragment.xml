<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEDF3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login_regisgter_fragemnts.otp_genrator_fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
       android:background="@drawable/back2"
        android:backgroundTint="#ffff"
        android:src="@drawable/logo1"
        android:padding="40dp"
        android:layout_marginTop="0dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="#010207"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >  <TextView
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref_ruqaa"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Please Provide Your Details To Us"
            />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aref_ruqaa"
                android:shadowColor="@color/white"
                android:shadowRadius="5"
                android:text="Enter Your Mobile Number"

                android:textColor="@color/white"
                android:textSize="18dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
              android:drawableRight="@drawable/ic_baseline_call_24"
android:drawableTint="@color/white"
android:padding="10dp"
                android:background="@drawable/back_edittext"
                android:shadowColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Mobile Number "
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/number"
                android:maxLength="10"

                />    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aref_ruqaa"
            android:shadowColor="@color/white"
            android:shadowRadius="5"
            android:text="Enter Your Name"

            android:textColor="@color/white"
            android:textSize="18dp"

            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/ic_baseline_person_pin_24"
                android:drawableTint="@color/white"
                   android:padding="10dp"
                android:background="@drawable/back_edittext"
                android:shadowColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="Enter Name"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/name"


                />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:text=""
               android:textColor="#F00"
             android:layout_marginStart="20dp"
           android:id="@+id/errorloign"
               android:layout_marginTop="20dp"
               />


           <Button

               android:layout_width="90dp"
android:layout_marginTop="10dp"
               android:layout_height="40dp"
               android:background="@drawable/back_edittext"
               android:text="Next"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:id="@+id/next2"
               android:textSize="15dp"
               android:layout_marginLeft="270dp"
               android:fontFamily="sans-serif-smallcaps"

               />



        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/aref_ruqaa"

                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Developed By Girijesh For Test At IndiaNIC"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>